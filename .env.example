# Binance Automation Trading Bot - Environment Variables

# ==============================
# Core Configuration
# ==============================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
DEBUG=true
LOG_LEVEL=debug

# ==============================
# Database Configuration
# ==============================
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
DATABASE_URL=your_direct_postgres_url

# ==============================
# AI Services
# ==============================
# Local AI Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_MAX_TOKENS=2048

# Gemini CLI Configuration
GEMINI_MODEL_PATH=./models/trading-assistant
GEMINI_CACHE_DIR=./.cache/gemini
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048
GEMINI_RETRY_ATTEMPTS=3
GEMINI_LOCAL_MODE=true
GEMINI_MODELS_DIR=./models

# LangChain Configuration
LANGCHAIN_CACHE_DIR=./.cache/langchain
LANGCHAIN_API_KEY=your_langchain_key
LANGCHAIN_PROJECT=binance-trading-bot

# ==============================
# Communication Services
# ==============================
# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=your_webhook_url
TELEGRAM_ADMIN_ID=your_admin_chat_id

# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_token
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
DISCORD_WEBHOOK_URL=your_webhook_url

# Notion Integration
NOTION_API_KEY=your_notion_integration_token
NOTION_DATABASE_ID=your_database_id
NOTION_ROOT_PAGE=your_root_page_id

# ==============================
# Payment Processing
# ==============================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_ID_BASIC=price_basic_tier
STRIPE_PRICE_ID_PRO=price_pro_tier
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_tier

# ==============================
# Trading Configuration
# ==============================
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true
MAX_TRADE_AMOUNT=1000
RISK_LEVEL=medium
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=4

# ==============================
# Security & Rate Limiting
# ==============================
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
AUTH_COOKIE_NAME=trading_bot_session

# ==============================
# Security Scanning & Monitoring
# ==============================
# Snyk Configuration
SNYK_API_TOKEN=your_snyk_api_token
SNYK_ORG_ID=your_snyk_org_id
SNYK_PROJECT_ID=your_snyk_project_id
SNYK_SEVERITY_THRESHOLD=medium
SNYK_MONITOR_FREQUENCY=daily
SNYK_AUTO_FIX=false
SNYK_FAIL_ON=high

# GitHub Security Features
GITHUB_SECURITY_ALERTS=true
DEPENDABOT_ALERTS_ENABLED=true
CODE_SCANNING_ENABLED=true

# ==============================
# Security & Monitoring
# ==============================
# Trading Monitoring
MONITOR_TRADING_INTERVAL=5000
ERROR_RETRY_ATTEMPTS=3
ERROR_LOGGING_DIR=./logs

# AI Model Monitoring
AI_RESPONSE_TIMEOUT=5000
AI_FALLBACK_ENABLED=true
AI_PERFORMANCE_TRACKING=true

# ==============================
# Development Tools
# ==============================
ENABLE_SWAGGER=true
CORS_ORIGIN=http://localhost:3000
TEST_MODE=true
MOCK_TRADING=true

# ==============================
# Deployment
# ==============================
FLY_API_TOKEN=your_fly_api_token
DOCKER_REGISTRY=your_registry_url
DEPLOY_HOOK_SECRET=your_deploy_webhook_secret

# ==============================
# Feature Flags
# ==============================
FEATURE_AUTO_TRADING=true
FEATURE_AI_ANALYSIS=true
FEATURE_SOCIAL_TRADING=false
FEATURE_ADVANCED_CHARTS=true
FEATURE_BACKTESTING=true
